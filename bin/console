#!/usr/bin/env php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use DTL\ClassMover\Bridge\Symfony\Console\Command\FindReferencesCommand;
use DTL\ClassMover\Finder\Finder\RecursiveDirectoryFinder;
use DTL\ClassMover\Bridge\Microsoft\TolerantParser\TolerantRefFinder;
use DTL\ClassMover\Bridge\Microsoft\TolerantParser\TolerantRefReplacer;

$refFinder = new TolerantRefFinder();
$refReplacer = new TolerantRefReplacer();
$finder = new RecursiveDirectoryFinder();

$application = new Application();
$application->add(new FindReferencesCommand($finder, $refFinder, $refReplacer));
$application->run();

